# FCFS Scheduling Algorithm in Python

# Function to calculate waiting time
def findWaitingTime(processes, n, bt, wt):
    # First process gets 0 waiting time
    wt[0] = 0  

    # Calculating waiting time for each process
    for i in range(1, n):
        wt[i] = bt[i-1] + wt[i-1]


# Function to calculate turn around time
def findTurnAroundTime(processes, n, bt, wt, tat):
    for i in range(n):
        tat[i] = bt[i] + wt[i]


# Function to calculate average time
def findavgTime(processes, n, bt):
    wt = [0] * n
    tat = [0] * n

    # Calculate waiting time
    findWaitingTime(processes, n, bt, wt)

    # Calculate turn around time
    findTurnAroundTime(processes, n, bt, wt, tat)

    print("\nPROCESS\tBURST TIME\tWAITING TIME\tTURNAROUND TIME")

    total_wt = 0
    total_tat = 0

    # Displaying all times
    for i in range(n):
        total_wt = total_wt + wt[i]
        total_tat = total_tat + tat[i]
        print(f"P{i+1}\t\t{bt[i]}\t\t{wt[i]}\t\t{tat[i]}")

    print("\nAverage Waiting Time =", total_wt / n)
    print("Average Turnaround Time =", total_tat / n)


# Driver Code
if __name__ == "__main__":
    n = int(input("Enter number of processes: "))

    processes = [i+1 for i in range(n)]
    bt = []

    print("Enter Burst Time for each process:")

    for i in range(n):
        burst = int(input(f"BT of P{i+1}: "))
        bt.append(burst)

    findavgTime(processes, n, bt)
