# Shortest Job First (SJF) Scheduling Algorithm in Python (Non-Preemptive)

def sjf_scheduling(processes, burst_time):
    n = len(processes)

    # Combine processes and burst times into a list of tuples
    # Example: [(P1, BT1), (P2, BT2), ...]
    proc_info = list(zip(processes, burst_time))

    # Sort by Burst Time (SJF Rule)
    proc_info.sort(key=lambda x: x[1])

    waiting_time = [0] * n
    turnaround_time = [0] * n

    # Calculate waiting time
    waiting_time[0] = 0
    for i in range(1, n):
        waiting_time[i] = waiting_time[i-1] + proc_info[i-1][1]

    # Calculate turnaround time
    for i in range(n):
        turnaround_time[i] = proc_info[i][1] + waiting_time[i]

    # Display Results
    print("\nPROCESS\tBT\tWT\tTAT")
    total_wt = 0
    total_tat = 0

    for i in range(n):
        p, bt = proc_info[i]
        wt = waiting_time[i]
        tat = turnaround_time[i]

        total_wt += wt
        total_tat += tat

        print(f"{p}\t{bt}\t{wt}\t{tat}")

    print("\nAverage Waiting Time =", total_wt / n)
    print("Average Turnaround Time =", total_tat / n)


# Driver Code
if __name__ == "__main__":
    n = int(input("Enter number of processes: "))
    
    processes = [f"P{i+1}" for i in range(n)]
    burst_time = []

    print("Enter Burst Time for each process:")
    for i in range(n):
        bt = int(input(f"BT for P{i+1}: "))
        burst_time.append(bt)

    sjf_scheduling(processes, burst_time)
